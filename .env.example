# Environment
APP_ENV=development

# Supabase project (public values only)
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# Server-only secrets (set in secret manager / CI, never commit real values)
SUPABASE_SERVICE_ROLE_KEY=SET_IN_SECRET_MANAGER
OPENAI_API_KEY=SET_IN_SECRET_MANAGER
GOOGLE_OAUTH_CLIENT_ID=SET_IN_SECRET_MANAGER
GOOGLE_OAUTH_CLIENT_SECRET=SET_IN_SECRET_MANAGER
TOKEN_ENCRYPTION_KEY=SET_IN_SECRET_MANAGER
TOKEN_ENCRYPTION_KEY_VERSION=1
EMBED_TOKEN_SIGNING_SECRET=SET_IN_SECRET_MANAGER
# Optional rotation format:
# TOKEN_ENCRYPTION_KEYS=1:BASE64_OLD_KEY,2:BASE64_NEW_KEY

# Chat runtime models/tuning (server-side)
OPENAI_CHAT_MODEL=gpt-4.1-mini
OPENAI_VALIDATION_MODEL=gpt-4.1-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
CHAT_RETRIEVAL_CANDIDATES=20
CHAT_RETRIEVAL_FINAL=8
CHAT_RETRIEVAL_MAX_PER_SOURCE=2

# OAuth callback and app hostnames
OWNER_APP_URL=http://localhost:5173
WIDGET_ORIGIN=http://localhost:8080
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:54321/functions/v1/drive_connect
